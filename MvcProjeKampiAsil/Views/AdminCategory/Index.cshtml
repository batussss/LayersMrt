@using EntityLayer.Concrete
@model  List<Category>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_adminLayout.cshtml";
}

<table class="table table-bordered">
    <tr>
        <th>#</th>
        <th>Kategori Adı</th>
        <th>Sil</th>
        <th>Güncelle</th>
        <th>Başlıklar</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <th>@item.CategoryID</th>
            <td>@item.CategoryName</td>
            <td><a href="/AdminCategory/DeleteCategory/@item.CategoryID" class="btn btn-danger">Sil</a></td>
            <td><a href="/AdminCategory/EditCategory/@item.CategoryID" class="btn btn-danger">güncelle</a></td>
            <td><a href="#" class="btn btn-danger">Başlıklar</a></td>
        </tr>

    }
</table>

<br />
<a href="/AdminCategory/AddCategory" class="btn btn-info">Yeni Kategori</a>

